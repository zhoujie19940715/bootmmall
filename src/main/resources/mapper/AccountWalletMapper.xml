<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhoujie.mall.dao.AccountWalletMapper" >
    <resultMap id="BaseResultMap" type="com.zhoujie.mall.pojo.AccountWallet" >
        <constructor >
            <idArg column="id" jdbcType="INTEGER" javaType="java.lang.Integer" />
            <!--<arg column="user_amount" jdbcType="DECIMAL" javaType="java.math.BigDecimal" />
            <arg column="create_time" jdbcType="TIMESTAMP" javaType="java.util.Date" />
            <arg column="update_time" jdbcType="TIMESTAMP" javaType="java.util.Date" />
            <arg column="pay_password"  jdbcType="VARCHAR" javaType="java.lang.String" />
            <arg column="is_open"  jdbcType="INTEGER" javaType="java.lang.Integer" />
            <arg column="check_key" jdbcType="VARCHAR" javaType="java.lang.String" />-->
          <!--  <arg column="version"  jdbcType="INTEGER" javaType="java.lang.Integer" />-->
        </constructor>
    </resultMap>
    <sql id="Base_Column_List" >
    id,  user_amount, create_time, update_time, pay_password, is_open,check_key,version
  </sql>
    <!--通过用户唯一编号，查询用户钱包相关的信息  -->
    <select id="selectByOpenId" resultType="com.zhoujie.mall.pojo.AccountWallet" parameterType="java.lang.String">
        select
        <!--<include refid="Base_Column_List" />-->
        id,userAmount
        from account_wallet
        where user_open_id = #{openId,jdbcType=VARCHAR}
    </select>
    <!--用户钱包数据更改 ，通过乐观锁(version机制)实现 -->
    <update id="updateAccountWallet" parameterType="com.zhoujie.mall.pojo.AccountWallet">
          <![CDATA[
          	update account_wallet
          	set userAmount = #{userAmount},version = version + 1
          	where id =#{id,jdbcType=INTEGER} and version = #{version,jdbcType=INTEGER}
           ]]>
  </update>


</mapper>
